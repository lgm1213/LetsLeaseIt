<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-3">
      <div class="ibox float-e-margins">
        <div class="ibox-content mailbox-content">
          <div class="file-manager">
            <%= link_to "Compose", new_conversation_path, class: "btn btn-block btn-primary compose-mail" %>
            <div class="space-25"></div>
            <%= render 'mailbox/folders' %>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-9 animated fadeInRight">
      <div class="mail-box-header">
        <% if is_conversation %>
        <h2>Compose Mail</h2>
      </div>
      <div class="mail-box">
        <div class="mail-body">
          <%= render 'conversations/form' %>
        </div>
      </div>
        <% else %>
      <div class="mail-box-header">
        <h2>Inbox(Will Fill Later With Count)</h2>     
      </div>
      <div class="mail-box">
        <table class="table table-hover table-mail">
          <tbody>
            <tr>
              <th class="check-mail">Select</th>
              <th class="mail-contact">User</th>
              <th class="mail-subject">Subject</th>
              <th class="text-right mail-date">Recieved</th>
            </tr>
              <%= render partial: 'conversations/conversation', collection: messages %>
              <% end %>
          </tbody>
        </table>
      </div>
      
    </div>
  </div>
</div>