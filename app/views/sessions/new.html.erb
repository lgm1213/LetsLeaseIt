<div class="loginColumns animated fadeInDown">
  <div class="row">
    <div class="col-md-6">
      <h2 class="font-bold">Welcome to LeaseIt!</h2>
    </div>
    <div class="col-md-6">
      <div class="ibox-content">
        <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
          <%= f.label :username %>
          <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
          <%= f.submit "Login", class: 'btn btn-primary block full-width m-b' %>
              <%= check_box_tag :remember_me %>
           <span>Remember me on this computer</span><br><br>
            <% end %>
            <%#= link_to "Forgot Password?", new_password_reset_path %>
            <p class="text-muted text-center"><small>Do not have an account?</small></p>
            <%= link_to "Create Account", new_user_path, class: 'btn btn-sm btn-white btn-block' %>
      </div>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-md-6">
      <p>LeaseIt inc.</p>
    </div>
    <div class="col-md-6 text-right">
      <small>Â© 2017</small>
    </div>
  </div>
</div>
