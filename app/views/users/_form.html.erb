<%= form_with(model: user, local: true, html: {id: 'form', class: 'form-horizontal'}) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :username, class: 'control-label col-sm-4' %>
    <div class="col-sm-2">
      <%= form.text_field :username, id: :user_username, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :email, class: 'control-label col-sm-4' %>
    <div class="col-sm-2">
      <%= form.text_field :email, id: :user_email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password, class: 'control-label col-sm-4' %>
    <div class="col-sm-2">
      <%= form.password_field :password, id: :user_password_digest, class: "form-control" %>
    </div>
  </div>

   <div class="form-group">
    <%= form.label :password_confirmation, class: 'control-label col-sm-4' %>
    <div class="col-sm-2">
      <%= form.password_field :password_confirmation, id: :user_password_digest, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :company, class: 'control-label col-sm-4' %>
    <div class="col-sm-2">
      <%= form.text_field :company_id, id: :user_company, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :title, class: 'control-label col-sm-4' %>
    <div class="col-sm-2">
      <%= form.text_field :title, id: :user_title, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
