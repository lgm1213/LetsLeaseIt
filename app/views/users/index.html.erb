<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Admin User Tools</h2>
    <ol class="breadcrumb">
      <li><%= link_to "Home", root_path %></a></li>
      <li><%= link_to "Companies List", companies_path %></li>
      <li class="active"><strong><%= link_to "User List", users_path %></strong></li>
      <% if can? :create, User %>
      <li><%= link_to "Create New Users", new_user_path %></li>
      <%end%>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<p id="notice"><%= notice %></p>

<h1>Master User List</h1>
<div class="ibox-content">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>User ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Company</th>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= user_company(user)%></td>
          <td><%= user.title %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>

<br>

