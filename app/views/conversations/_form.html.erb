
<%= form_for :conversation, url: :conversations, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :recipients, "To:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:recipients, User.all.collect {|p| [ p.username, p.id ] }, {}, { multiple: true , class: "chosen-select form-control" })%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :subject, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
    </div>
  </div>
  <div class="mail-text h-200">
    <div class="summernote">
      <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", rows: 4  %>
    </div>
  </div>
  <div class="mail-body text-right tooltip-demo">
    <%= f.submit "Send Message", class: "btn btn-sm btn-primary", 'data-toggle':"tooltip", 'data-placement':"top" %>
    
  </div>

<% end %>