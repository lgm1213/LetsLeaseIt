<div class="wrapper wrapper-content animaed fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="box">
      <div class="col-lg-12">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
<p id="notice"><%= notice %></p>

<h1>Rented Units</h1>
<div class="table-responsive">
  <table class= 'table table-striped table-condensed'>
    <thead>
      <tr>
        <th>Unit no</th>
        <th>Unit model</th>
        <th>Price</th>
        <th>Bedrooms</th>
        <th>Bathrooms</th>
        <th>Half baths</th>
        <th>Square footage</th>
        <th>Leased</th>
        <th>Appointment</th>
        <th>Lease Span</th>
        <th>Notes</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rented_units.each do |rented_unit| %>
        <tr>
          <td><%= rented_unit.unit_no %></td>
          <td><%= rented_unit.unit_model %></td>
          <td><%= rented_unit.price %></td>
          <td><%= rented_unit.bedrooms %></td>
          <td><%= rented_unit.bathrooms %></td>
          <td><%= rented_unit.half_baths %></td>
          <td><%= rented_unit.square_footage %></td>
          <td><%= rented_unit.leased %></td>
          <td><%= Appointment.find(rented_unit.appointment_id).start_time.strftime("%A %m/%d/%Y") %></td>
          <td><%#= rented_unit.spanstart.strftime("%m/%d/%y") %> thru <%#= rented_unit.spanend %></td>
          <td><%= rented_unit.notes %></td>
          <td><%= link_to 'Show', building_listing_appointment_rented_unit_path(@building, @listing, @appointment, rented_unit) %></td>
          <td><%= link_to 'Edit', edit_building_listing_appointment_rented_unit_path(@building, @listing, @appointment, rented_unit) %></td>
          <td><%= link_to 'Destroy', building_listing_appointment_rented_unit_path(@building, @listing, @appointment, rented_unit), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>

<br>
<%= link_to 'New Rented Unit', new_building_listing_appointment_rented_unit_path(@building, @listing, @appointment) %>

