  </div>
  <div class="form-group">
    <%= form.label :price, class: 'control-label col-sm-4' %>
    <div class="col-sm-2">
      <%= form.text_field :price, id: :rented_unit_price, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :bedrooms, class: 'control-label col-sm-4' %>
    <div class="col-sm-2">
      <%= form.text_field :bedrooms, id: :rented_unit_bedrooms, class: 'form-control' %>
