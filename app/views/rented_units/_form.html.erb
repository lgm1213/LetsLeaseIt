<%= form_with(model: [@building, @listing, @appointment, rented_unit], local: true, html: {id: 'form', class: 'wizard-big form-horizontal'}) do |form| %>
  <% if rented_unit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rented_unit.errors.count, "error") %> prohibited this rented_unit from being saved:</h2>
