<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Realtor name</th>
      <th>Realtor phone</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Listing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.realtor_name %></td>
        <td><%= appointment.realtor_phone %></td>
        <td><%= appointment.start_time %></td>
        <td><%= appointment.end_time %></td>
        <td><%= appointment.listing %></td>
        <td><%= link_to 'Show', building_listing_appointment_path(@building_listing, appointment) %></td>
        <td><%= link_to 'Edit', edit_building_listing_appointment_path(@building_listing, appointment) %></td>
        <td><%= link_to 'Destroy', building_listing_appointment_path(@building_listing, appointment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

