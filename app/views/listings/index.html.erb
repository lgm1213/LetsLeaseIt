<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    New Building or Property
    <ol class="breadcrumb">
      <li>
        <%= link_to "Home", root_path %>
      </li>
      <li>
        <%= link_to "Buildings", buildings_path %>
      </li>
      <li>
        <strong><%= link_to "Portfolio", building_listings_path %></strong>
      </li>
      <li class="active">
        <%= link_to "New Listing", new_building_listing_path %>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<p id="notice"><%= notice %></p>
<div class="ibox-content">
  <h1>Listings</h1>
  <table>
    <thead>
      <tr>
        <th>Building</th>
        <th>Unit Number</th>
        <th>Unit Model</th>
        <th>Price</th>
        <th>Bedrooms</th>
        <th>Bath</th>
        <th>Half bath</th>
        <th>Sqft</th>
        <th>Date available</th>
        <th>Notes</th>
        <th>Active?</th>
        <th>Created On</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @listings.each do |listing| %>
        <tr>
          <td><%= link_to "#{listing.building.id}", listing.building %></td>
          <td><%= listing.unit_no %></td>
          <td><%= listing.unit_model %></td>
          <td><%= listing.price %></td>
          <td><%= listing.bedrooms %></td>
          <td><%= listing.bath %></td>
          <td><%= listing.half_bath %></td>
          <td><%= listing.sqft %></td>
          <td><%= listing.date_available.strftime('%A, %m/%d/%Y') %></td>
          <td><%= listing.notes %></td>
          <td><%= listing.active %></td>
          <td><%= listing.created_at.strftime("%A, %m/%d/%Y @ %I:%M%p")%></td>
          <td><%= link_to 'Show', building_listing_path(@building, listing) %></td>
          <td><%= link_to 'Edit', edit_building_listing_path(@building, listing) %></td>
          <td><%= link_to 'Destroy', building_listing_path(@building, listing), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Listing', new_building_listing_path %>
