<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Building</th>
      <th>Unit Number</th>
      <th>Unit Model</th>
      <th>Price</th>
      <th>Bedrooms</th>
      <th>Bath</th>
      <th>Half bath</th>
      <th>Sqft</th>
      <th>Date available</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= link_to "#{listing.building.id}", building_path(listing) %></td>
        <td><%= listing.unit_no %></td>
        <td><%= listing.unit_model %></td>
        <td><%= listing.price %></td>
        <td><%= listing.bedrooms %></td>
        <td><%= listing.bath %></td>
        <td><%= listing.half_bath %></td>
        <td><%= listing.sqft %></td>
        <td><%= listing.date_available %></td>
        <td><%= listing.notes %></td>
        <td><%= link_to 'Show', building_listing_path(@building, listing) %></td>
        <td><%= link_to 'Edit', edit_building_listing_path(@building, listing) %></td>
        <td><%= link_to 'Destroy', building_listing_path(@building, listing), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

