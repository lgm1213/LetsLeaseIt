<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Active Companies</h2>
    <ol class="breadcrumb">
      <li><%= link_to "Home", root_path %></a></li>
      <li class="active"><strong><%= link_to "Company Index", companies_path %></strong></li>
      <li><%= link_to "New Company", new_company_path %></li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<p id="notice"><%= notice %></p>

<h1>Companies</h1>
<div class="ibox-content">
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Id#</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.id %></td>
          <td><%= company.name %></td>
          <td><%= link_to 'Show', company %></td>
          <td><%= link_to 'Edit', edit_company_path(company) %></td>
          <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Company', new_company_path, class: 'btn btn-info'%>
  
</div>
